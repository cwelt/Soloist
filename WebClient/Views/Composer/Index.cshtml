@model SoloistWebClient.ViewModels.ComposeFormViewModel
@{
    ViewBag.Title = "Composition parameters";

    // set culture
    var englishCulture = System.Globalization.CultureInfo.CreateSpecificCulture("en-US");

    System.Globalization.CultureInfo.CurrentCulture = englishCulture;
    System.Globalization.CultureInfo.CurrentUICulture = englishCulture;
}



<h2>Fill in the following parameters for the composition</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <label for="file">Upload MidiFile:</label>
        <input type="file" name="midi-file" id="midi-file" /><br><br>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Compose" class="btn btn-default" />
            </div>
        </div>
    </div>
}



